{
  "name": "@theredhead/data",
  "version": "1.0.6",
  "description": "Access to databases",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p .",
    "publish-patch": "npm run test && npm run build && npm version patch && npm publish --access public",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "keywords": [
    "database"
  ],
  "author": "kris@theredhead.nl",
  "repository": {
    "url": "git+https://github.com/theredhead/theredhead-data.git"
  },
  "license": "WTFPL",
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/sqlite3": "^3.1.7",
    "nyc": "^15.1.0",
    "ts-node": "^10.4.0",
    "supertest": "^6.1.3",
    "jest": "^27.4.3",
    "ts-jest": "^27.0.3",
    "typescript": "^4.2.2"
  },
  "bugs": {
    "url": "https://github.com/theredhead/theredhead-data/issues"
  },
  "homepage": "https://github.com/theredhead/theredhead-data#readme",
  "dependencies": {
    "mysql2": "^2.3.3",
    "sqlite3": "^4.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "tests",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
